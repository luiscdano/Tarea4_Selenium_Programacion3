<div class="modal fade" id="conversionModal" tabindex="-1"
     aria-labelledby="conversionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="conversionModalLabel">
                    Conversión de Divisas
                </h5>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <!-- Nombre de la divisa -->
                <h4 id="modalNombre" class="mb-3"></h4>

                <!-- Monto -->
                <div class="mb-3">
                    <label class="form-label">Monto en RD$:</label>
                    <input type="number" id="modalMonto" class="form-control"
                           placeholder="Ingrese monto en pesos dominicanos" min="0" step="0.01" />
                </div>

                <!-- Tipo de conversión -->
                <div class="mb-3">
                    <label class="form-label">Tipo de conversión:</label>
                    <select id="modalTipo" class="form-select">
                        <option value="venta">Venta (RD$ → Divisa)</option>
                        <option value="compra">Compra (Divisa → RD$)</option>
                    </select>
                </div>

                <button type="button" class="btn btn-primary"
                        onclick="calcularConversion()">
                    Convertir
                </button>

                <!-- Resultado -->
                <p id="modalResultado"
                   class="alert alert-success mt-3"
                   style="display:none;"></p>

                <hr />

                <!-- Gráfica individual -->
                <h5 class="text-center mb-2">Histórico simulado</h5>
                <canvas id="modalChart" style="width:100%;"></canvas>
            </div>
        </div>
    </div>
</div> 