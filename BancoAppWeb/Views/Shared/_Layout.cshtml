@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BancoAppWeb</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados -->
    <style>
        :root {
            --azul-oscuro: #003082;
            --azul-medio: #004173;
            --azul-claro: #0979b0;
            --celeste: #0cb7f2;
            --amarillo: #FFC107;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f6f7fb;
            margin: 0;
            padding: 0;
        }
        /* NAVBAR */
        .navbar-custom {
            background-color: var(--azul-oscuro);
        }
        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand {
            color: white !important;
            font-weight: 500;
        }
        .navbar-custom .nav-link:hover {
            color: var(--amarillo) !important;
        }
        .btn-login {
            background-color: var(--amarillo);
            color: var(--azul-oscuro);
            font-weight: 600;
        }
        .btn-register {
            background-color: #ffffff;
            color: var(--azul-oscuro);
            border: 1px solid #ffffff;
            font-weight: 600;
        }

        /* FOOTER */
        .footer {
            background-color: var(--azul-oscuro);
            color: #ffffff;
            padding: 25px 0;
            margin-top: 60px;
        }
        .footer a {
            color: #FFC107;
            text-decoration: none;
            margin: 0 10px;
        }
        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-custom py-3 shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                BancoAppWeb
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon text-white"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Divisas" asp-action="Index">Divisas</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Simulador" asp-action="Index">Simulador</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                </ul>

                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Manage/Index">
                                Hola, @User.Identity?.Name
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="btn btn-register mx-2">Cerrar sesión</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-login mx-1" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-register mx-1" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer text-center">
        <div class="container">
            <p>© @DateTime.Now.Year - BancoAppWeb | Todos los derechos reservados</p>
            <p>
                <a asp-controller="Home" asp-action="Privacy">Políticas de Privacidad</a> |
                <a asp-controller="Home" asp-action="Security">Seguridad</a> |
                <a asp-controller="Home" asp-action="FAQ">Preguntas Frecuentes</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html> 