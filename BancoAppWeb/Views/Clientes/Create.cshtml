@model BancoAppWeb.Models.Cliente

@{
    ViewData["Title"] = "Registrar Cliente";
}

<h1>Registrar Cliente</h1>

<div class="container mt-4">
    <form asp-action="Create" method="post">

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" id="Nombre" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" id="Apellido" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" id="Telefono" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" id="Email" />
        </div>

        <button type="submit" class="btn btn-primary mt-2" id="btnRegistrarCliente">
            Guardar
        </button>
    </form>
</div> 